---
import '@unocss/reset/tailwind.css'

import Head from '../components/Head.astro'
---

<!doctype html>
<html lang="en">
  <head>
    {/* https://github.com/withastro/prettier-plugin-astro/issues/316#issuecomment-1400808708 */}
    {(<Head />)}
  </head>
  <body>
    <main id="content">
      <h1>Starlight <code>`&lt;head&gt;`</code> Generator</h1>
      <slot />
    </main>
    <!-- // TODO(HiDeoo)  -->
    <!-- <Footer /> -->
  </body>
</html>

<style>
  :where(html) {
    --color-red-300: hsl(0 94% 82%);
    --color-red-500: hsl(0 84% 60%);

    --color-slate-50: hsl(210 40% 98%);
    --color-slate-200: hsl(214 32% 91%);
    --color-slate-500: hsl(215 16% 47%);
    --color-slate-600: hsl(215 19% 35%);
    --color-slate-700: hsl(215 25% 27%);
    --color-slate-800: hsl(217 33% 17%);
    --color-slate-900: hsl(222 47% 11%);
    --color-slate-950: hsl(229 84% 5%);

    --font-base: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue',
      Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    --font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;

    --font-semibold: 600;
    --font-extrabold: 800;

    --rounded: 0.25rem;
    --rounded-md: 0.375rem;

    --size-0-5: 0.125rem;
    --size-1: 0.25rem;
    --size-1-5: 0.375rem;
    --size-2: 0.5rem;
    --size-3: 0.75rem;
    --size-4: 1rem;
    --size-6: 1.5rem;
    --size-8: 2rem;
    --size-12: 3rem;
    --size-16: 4rem;
    --size-24: 6rem;

    --text-sm: 0.95rem;
    --text-lg: 1.125rem;
    --text-2xl: 1.5rem;
    --text-3xl: 1.875rem;
    --text-4xl: 2.25rem;
  }

  body {
    background-color: var(--color-slate-900);
    color: var(--color-slate-50);
    display: flex;
    font-family: var(--font-base);
    justify-content: center;
    line-height: 1.8;
  }

  main {
    max-width: 768px;
    padding: var(--size-8) var(--size-4);
    width: 100%;
  }

  h1 {
    font-size: var(--text-3xl);
    font-weight: var(--font-extrabold);
    line-height: 1.25;
    margin-bottom: var(--size-8);
    text-align: center;
    text-wrap: balance;
  }

  code {
    background-color: var(--color-slate-700);
    border-radius: var(--rounded-md);
    font-family: var(--font-mono);
    font-size: var(--text-2xl);
    margin-inline: var(--size-2);
    padding: var(--size-1-5) var(--size-0-5) var(--size-0-5);
  }

  @media (min-width: 640px) {
    main {
      padding: var(--size-12) var(--size-8);
    }

    h1 {
      font-size: var(--text-4xl);
      margin-bottom: var(--size-12);
    }

    code {
      font-size: var(--text-3xl);
    }
  }
</style>
